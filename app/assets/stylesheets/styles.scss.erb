			&:hover {
				background-position: 255px -313px;
			}
		}


		.reply {
			right: 40px;
			background-position: 276px -275px;
			&:hover {
				background-position: 253px -275px;
			}
		}

		.retweet {
			right: 0px;
			background-position: 276px -293px;
			&:hover {
				background-position: 249px -293px;
			}
		}

		.reply.sent:hover {
			// No change
			background-position: 276px -275px;
		}

		.retweet.sent:hover {
			// No change
			background-position: 276px -293px;
		}
	}

