// Flip functionality for tweets
.tweet {
	display: block;
	position: relative;
	width: 31.33%;
	height: 225px;
	float: left;
	margin: 1%;
	margin-bottom: 50px;
}

.topTweetWrapper {
	display:block;
	width:100%;
	height:100%;
}

.contentWrapper, .userWrapper, .replyWrapper {
	position: relative;
	height: 100%;
}

.tweet .mainBody {
	width:100%;
	height:100%;
	position:absolute;
	display:block;	
	overflow: initial;		
	transition: transform .2s;		
}

.tweet .replyBody, .tweet .userBody {
	display:block;
	width:100%;
	height:100%;
}	
/*
* Without CSS3
*/
.tweet.scroll {
	overflow: hidden;
}	

.tweet.scroll .replyBody {
	bottom:-280px;
}

.tweet.scroll .userBody {
	bottom:-280px;
}

/*
* CSS3 Flip
*/	
.fadeOut {
  -webkit-opacity: 0;
  -moz-opacity: 0;
  opacity: 0;
  -webkit-transition: all .3s ease;
  -moz-transition: all .3s ease;
  -ms-transition: all .3s ease;
  -o-transition: all .3s ease;
  transition: all .3s ease;
}

.fadeIn {
	display: inherit;
	-webkit-opacity: 1;
	-moz-opacity: 1;
	opacity: 1;
	-webkit-transition: all .8s ease;
	-moz-transition: all .8s ease;
	-ms-transition: all .8s ease;
	-o-transition: all .8s ease;
	transition: all .8s ease;
}

.behind {
	z-index: -50;
}

.tweet.flip {
	-webkit-perspective:800px;		
	-moz-perspective:800px;
	-ms-perspective:800px;		   		
	 -o-perspective:800px;
	perspective:800px;
}

.tweet.flip .topTweetWrapper {
	-webkit-transition: -webkit-transform 1s;
	-moz-transition: -moz-transform 1s;
	-ms-transition: -moz-transform 1s;
	-o-transition: -moz-transform 1s;
	transition: transform 1s;
	-webkit-transform-style: preserve-3d;
	-moz-transform-style: preserve-3d;			
	-ms-transform-style: preserve-3d;			
	-o-transform-style: preserve-3d;			
	transform-style: preserve-3d;			
}

.tweet.flip .replyBody {
	-webkit-transform: rotateY(-180deg);
	-moz-transform: rotateY(-180deg);
	-ms-transform: rotateY(-180deg);
	-o-transform: rotateY(-180deg);
	transform: rotateY(-180deg);			   			
}

.tweet.flip .userBody {
	-webkit-transform: rotateX(180deg);
	-moz-transform: rotateX(180deg);
	-ms-transform: rotateX(180deg);
	-o-transform: rotateX(180deg);
	transform: rotateX(180deg);			   			
}

.tweet.flip .flipLeft {
	-webkit-transform: rotateY(-180deg);
	-moz-transform: rotateY(-180deg);			
	-ms-transform: rotateY(-180deg);			
	-o-transform: rotateY(-180deg);			
	transform: rotateY(-180deg);			
}

.tweet.flip .flipTop {
	-webkit-transform: rotateX(180deg);
	-moz-transform: rotateX(180deg);			
	-ms-transform: rotateX(180deg);			
	-o-transform: rotateX(180deg);			
	transform: rotateX(180deg);			
}

.mainBody, .replyBody, .userBody {
	border: 1px solid #D0D4DE;
}

.tweet.flip .mainBody,
.tweet.flip .replyBody,
.tweet.flip .userBody {
	-webkit-transition-timing-function: ease-in;
	-moz-transition-timing-function: ease-in;

	-webkit-backface-visibility: hidden;
	-moz-backface-visibility: hidden;
	-ms-backface-visibility: hidden;
	-o-backface-visibility: hidden;
	backface-visibility: hidden;
}

.teaseDown {
	-webkit-transform: rotateX(12deg);
	-moz-transform: rotateX(12deg);			
	-ms-transform: rotateX(12deg);			
	-o-transform: rotateX(12deg);			
	transform: rotateX(12deg);	
}

.teaseUp {
	-webkit-transform: rotateX(-12deg);
	-moz-transform: rotateX(-12deg);			
	-ms-transform: rotateX(-12deg);			
	-o-transform: rotateX(-12deg);			
	transform: rotateX(-12deg);	
}

.teaseLeft {
	-webkit-transform: rotateY(-12deg);
	-moz-transform: rotateY(-12deg);			
	-ms-transform: rotateY(-12deg);			
	-o-transform: rotateY(-12deg);			
	transform: rotateY(-12deg);	
}

.teaseRight {
	-webkit-transform: rotateY(12deg);
	-moz-transform: rotateY(12deg);			
	-ms-transform: rotateY(12deg);			
	-o-transform: rotateY(12deg);			
	transform: rotateY(12deg);	
}


